package FUR;

public class Rectangles {
	
	 private final int width;
	 private final int length;
	 
public Rectangles(int width, int length) {
    if (!isWidth(width)) {
        throw new IllegalArgumentException("illegal width: " + width);
    }
    else if (!isLength(length)) {
    	throw new IllegalArgumentException("illegal length: " + length);
    }
    this.width = width;
    this.length = length;
}
private boolean isWidth(int n) {
    return n >= 0 && n <= 120;
}
private boolean isLength(int n) {
    return n >= 0 && n <= 120;
}

 public int getPerimetr()
 {
	 return width*2+length*2;
 }
 
 public int getArea() {
	 return width*length;
 }

public String Result() {
 return String.format("Perimetr is: %d Area is: %d", getPerimetr(), getArea());
}
public int getWidth() {
    return width;
}

public int getLength() {
    return length;
}

public Rectangles changeLength(int length) {
    return new Rectangles(this.width, length);
}

public Rectangles changeWidth(int width) {
    return new Rectangles(width, this.length);
}
}
